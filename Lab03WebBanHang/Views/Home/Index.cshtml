@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-8 mx-auto text-center text-white">
                    <h1 class="display-3 fw-bold mb-4 animate-fade-in">
                        Chào Mừng Đến Với Shop Của Chúng Tôi
                    </h1>
                    <p class="lead mb-4 fs-4">
                        Khám phá những sản phẩm chất lượng cao với giá tốt nhất
                    </p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-light btn-lg px-5 py-3 rounded-pill shadow-lg">
                            <i class="bi bi-bag-check me-2"></i>Xem Sản Phẩm
                        </a>
                        <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">
                            <i class="bi bi-cart3 me-2"></i>Giỏ Hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5 bg-light">
    <div class="container py-5">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold mb-3">Tại Sao Chọn Chúng Tôi?</h2>
                <p class="text-muted fs-5">Những lý do khiến khách hàng tin tưởng</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm hover-lift">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-truck fs-1 text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Giao Hàng Nhanh</h4>
                    <p class="text-muted">
                        Giao hàng toàn quốc, nhanh chóng và an toàn. Miễn phí ship cho đơn hàng trên 500k.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm hover-lift">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check fs-1 text-success"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Sản Phẩm Chính Hãng</h4>
                    <p class="text-muted">
                        100% sản phẩm chính hãng, có tem bảo hành. Đổi trả trong vòng 7 ngày nếu có lỗi.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4 h-100 bg-white rounded shadow-sm hover-lift">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-headset fs-1 text-danger"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Hỗ Trợ 24/7</h4>
                    <p class="text-muted">
                        Đội ngũ chăm sóc khách hàng nhiệt tình, sẵn sàng hỗ trợ bạn mọi lúc mọi nơi.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5 bg-primary text-white">
    <div class="container py-4">
        <div class="row text-center g-4">
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold mb-2">1000+</h2>
                    <p class="mb-0 fs-5">Sản Phẩm</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold mb-2">5000+</h2>
                    <p class="mb-0 fs-5">Khách Hàng</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold mb-2">99%</h2>
                    <p class="mb-0 fs-5">Hài Lòng</p>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold mb-2">24/7</h2>
                    <p class="mb-0 fs-5">Hỗ Trợ</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="display-5 fw-bold mb-4">Sẵn Sàng Mua Sắm?</h2>
                <p class="lead text-muted mb-4 fs-5">
                    Hàng ngàn sản phẩm chất lượng đang chờ bạn khám phá
                </p>
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3 rounded-pill shadow">
                    <i class="bi bi-arrow-right-circle me-2"></i>Khám Phá Ngay
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="%23ffffff" fill-opacity="0.1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,144C960,149,1056,139,1152,122.7C1248,107,1344,85,1392,74.7L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
        background-size: cover;
        opacity: 0.3;
    }
    
    .hero-overlay {
        position: relative;
        z-index: 1;
        padding: 80px 0;
    }
    
    .min-vh-75 {
        min-height: 50vh;
    }
    
    .animate-fade-in {
        animation: fadeIn 1s ease-in;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    /* Feature Cards */
    .hover-lift {
        transition: all 0.3s ease;
        border: 1px solid #e9ecef;
    }
    
    .hover-lift:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }
    
    .feature-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border-radius: 50%;
    }
    
    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .stat-item {
        padding: 20px;
        transition: transform 0.3s ease;
    }
    
    .stat-item:hover {
        transform: scale(1.1);
    }
    
    /* CTA Section */
    .cta-section {
        background: #f8f9fa;
    }
    
    /* Buttons */
    .btn-lg {
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }
    
    .btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.5rem;
        }
        
        .hero-section .lead {
            font-size: 1.1rem;
        }
        
        .stat-item h2 {
            font-size: 2rem;
        }
    }
</style>
