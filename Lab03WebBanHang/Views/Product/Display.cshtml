@model Lab03WebBanHang.Models.Product

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">@Model.Name</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-height: 300px;" />
                    }
                    else
                    {
                        <p class="text-muted">No image available</p>
                    }
                </div>
                <div class="col-md-8">
                    <h3 class="text-success">Price: @Model.Price.ToString("C")</h3>
                    <p class="mt-3">@Model.Description</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>