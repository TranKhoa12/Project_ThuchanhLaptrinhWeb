@model ShoppingCart

<h2 class="my-4">Giỏ hàng của bạn</h2>

<table class="table table-striped table-bordered">
    <thead class="table-primary text-center">
        <tr>
            <th>Sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Tạm tính</th>
            <th></th> <!-- Nút xóa -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="text-center align-middle">
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td>@item.Quantity</td>
                <td>@(item.Price* item.Quantity)</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-danger btn-sm">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end align-items-center mt-4">
    <h5 class="me-3">Tổng cộng: <strong>@Model.Items.Sum(i => i.Price * i.Quantity).ToString("N0") đ</strong></h5>
    <a asp-action="Checkout" class="btn btn-success">Thanh toán</a>
</div>
